{% if items %}
    <ul>
        {% for item in items %}
            <li class="{{ item.classes|join(' ') }}">
                <a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
                {% if item.children %}
                    <ul>
                        {% for child in item.children %}
                            <li class="{{ child.classes|join(' ') }}">
                                <a target="{{ child.target }}" href="{{ child.link }}">{{ child.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endif %}
